<% if current_user != user %>
  <% if current_user.following?(user) %>
    <div class="m-auto">
      <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, class: options[:class].presence || "btn btn-info" %>
      <% if current_user != user && current_user.following?(user) && user.following?(current_user) %>
        <%= link_to 'chatを始める', chat_path(user.id), class: options[:class].presence || "btn btn-outline-info" %>
    <% end %>
    </div>
  <% else %>
    <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: options[:class].presence || "btn btn-success btn-block" %>
  <% end %>
<% end %>